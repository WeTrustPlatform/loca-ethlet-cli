{
  "$id": "locaEthletInit",
  "description": "Schema for initialize LocaEthlet instance",
  "type": "object",
  "required": ["rpc", "keystore", "password"],
  "properties": {
    "keystore": {
      "type": "string",
      "description": "Location of the keystore.json file"
    },
    "password": {
      "type": "string",
      "description": "Location of the password file"
    },
    "rpc": {
      "type": "string",
      "format": "uri",
      "description": "Address to an Ethereum node using RPC"
    }
  }
}
